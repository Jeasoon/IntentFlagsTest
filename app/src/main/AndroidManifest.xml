    xmlns:tools="http://schemas.android.com/tools"
    package="com.jeasoon.intent">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <meta-data
            android:name="android.max_aspect"
            android:value="2.5" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SingleInstanceActivity"
            android:label="SingleInstance"
            android:launchMode="singleInstance" />
        <activity
            android:name=".SingleInstanceActivity_AffinityA"
            android:label="SingleInstance"
            android:launchMode="singleInstance"
            android:taskAffinity=":A" />
        <activity
            android:name=".SingleInstanceActivity_AffinityB"
            android:label="SingleInstance"
            android:launchMode="singleInstance"
            android:taskAffinity=":B" />
        <activity
            android:name=".SingleInstanceActivity_AffinityC"
            android:label="SingleInstance"
            android:launchMode="singleInstance"
            android:taskAffinity=":C" />

        <activity
            android:name=".SingleTaskActivity"
            android:label="SingleTask"
            android:launchMode="singleTask" />
        <activity
            android:name=".SingleTaskActivity_AffinityA"
            android:label="SingleInstance"
            android:launchMode="singleInstance"
            android:taskAffinity=":A" />
        <activity
            android:name=".SingleTaskActivity_AffinityB"
            android:label="SingleInstance"
            android:launchMode="singleInstance"
            android:taskAffinity=":B" />
        <activity
            android:name=".SingleTaskActivity_AffinityC"
            android:label="SingleInstance"
            android:launchMode="singleInstance"
            android:taskAffinity=":C" />

        <activity
            android:name=".SingleTopActivity"
