            android:name=".SingleTopActivity_AffinityA"
            android:label="SingleInstance"
            android:launchMode="singleInstance"
            android:taskAffinity=":A" />
        <activity
            android:name=".SingleTopActivity_AffinityB"
            android:label="SingleInstance"
            android:launchMode="singleInstance"
            android:taskAffinity=":B" />
        <activity
            android:name=".SingleTopActivity_AffinityC"
            android:label="SingleInstance"
            android:launchMode="singleInstance"
            android:taskAffinity=":C" />

        <activity
            android:name=".StandardActivity"
